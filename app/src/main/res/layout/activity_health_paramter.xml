<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:padding="20dp"
    android:background="@color/white"
    android:gravity="center">

    <TextView
        android:id="@+id/title"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Enter Health Parameters"
        android:textSize="22sp"
        android:textStyle="bold"
        android:textColor="@color/black"
        android:gravity="center"
        android:layout_marginBottom="20dp" />

    <androidx.cardview.widget.CardView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:cardCornerRadius="12dp"
        app:cardElevation="6dp"

        android:layout_marginBottom="12dp"
        android:background="@color/white">

        <EditText
            android:id="@+id/oxygenLevelInput"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="Oxygen Level (%)"
            android:inputType="number"

            android:padding="12dp"
            android:textColor="@color/black"
            android:textSize="16sp" />
    </androidx.cardview.widget.CardView>

    <androidx.cardview.widget.CardView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:cardCornerRadius="12dp"
        app:cardElevation="6dp"
        android:layout_marginBottom="12dp"
        android:background="@color/white">

        <EditText
            android:id="@+id/heartRateInput"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="Heart Rate (bpm)"
            android:inputType="number"
            android:padding="12dp"
            android:textColor="@color/black"
            android:textSize="16sp" />
    </androidx.cardview.widget.CardView>

    <androidx.cardview.widget.CardView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:cardCornerRadius="12dp"
        app:cardElevation="6dp"
        android:layout_marginBottom="20dp"
        android:background="@color/white">

        <EditText
            android:id="@+id/bloodPressureInput"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="Blood Pressure (mmHg)"
            android:inputType="number"
            android:padding="12dp"
            android:textColor="@color/black"
            android:textSize="16sp" />
    </androidx.cardview.widget.CardView>

    <Button
        android:id="@+id/submitButton"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Send SOS Alert"
        android:backgroundTint="@color/red"
        android:textColor="@color/white"
        android:textSize="18sp"
        android:padding="12dp"
        android:textStyle="bold"
        android:layout_marginTop="10dp"/>

</LinearLayout>
