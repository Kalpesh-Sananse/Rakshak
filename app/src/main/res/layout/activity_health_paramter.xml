<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:padding="24dp"
    android:background="@color/white"
    android:gravity="center">

    <!-- Title -->
    <TextView
        android:id="@+id/title"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Enter Health Parameters"
        android:textSize="24sp"
        android:textStyle="bold"
        android:textColor="@color/black"
        android:gravity="center"
        android:layout_marginBottom="20dp" />

    <!-- Card View for Inputs -->
    <androidx.cardview.widget.CardView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:cardCornerRadius="16dp"
        android:cardElevation="6dp"
        android:background="@color/white"
        android:padding="20dp"
        android:layout_marginBottom="20dp">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <!-- Oxygen Level -->
            <EditText
                android:id="@+id/oxygenLevelInput"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:hint="Oxygen Level (%)"
                android:inputType="number"
                android:padding="14dp"
                android:background="@drawable/edittext_bg"
                android:textColor="@color/black"
                android:textSize="16sp"
                android:layout_marginBottom="16dp" />

            <!-- Heart Rate -->
            <EditText
                android:id="@+id/heartRateInput"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:hint="Heart Rate (bpm)"
                android:inputType="number"
                android:padding="14dp"
                android:background="@drawable/edittext_bg"
                android:textColor="@color/black"
                android:textSize="16sp"
                android:layout_marginBottom="16dp" />

            <!-- Blood Pressure -->
            <EditText
                android:id="@+id/bloodPressureInput"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:hint="Blood Pressure (mmHg)"
                android:inputType="number"
                android:padding="14dp"
                android:background="@drawable/edittext_bg"
                android:textColor="@color/black"
                android:textSize="16sp"
                android:layout_marginBottom="12dp" />

        </LinearLayout>
    </androidx.cardview.widget.CardView>

    <!-- Submit Button -->
    <Button
        android:id="@+id/submitButton"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Send SOS Alert"
        android:backgroundTint="@color/red"
        android:textColor="@color/white"
        android:textSize="18sp"
        android:padding="14dp"
        android:textStyle="bold"
        android:layout_marginTop="10dp"
        android:background="@drawable/edittext_bg"/>

</LinearLayout>
